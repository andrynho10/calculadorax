<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryColor">#FF5C6BC0</Color>
    <Color x:Key="SecondaryColor">#FF4DD0E1</Color>
    <Color x:Key="AccentColor">#FFFFB74D</Color>
    <Color x:Key="SurfaceColor">#FFF8F9FB</Color>
    <Color x:Key="CardColor">#FFFFFFFF</Color>
    <Color x:Key="TextColor">#FF263238</Color>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
</ResourceDictionary>
