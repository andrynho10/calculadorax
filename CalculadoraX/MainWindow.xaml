<Window x:Class="CalculadoraX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:CalculadoraX.Views"
        xmlns:vm="clr-namespace:CalculadoraX.ViewModels"
        Title="CalculadoraX"
        Width="1150"
        Height="780"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="24 24 24 0">
            <TextBlock Text="CalculadoraX"
                       FontSize="34"
                       FontWeight="Bold" />
            <TextBlock Text="Orden de compra, boleta de honorarios y conversión de monedas en un solo lugar."
                       Margin="0 4 0 24" />
        </StackPanel>

        <TabControl Margin="24"
                    HorizontalContentAlignment="Stretch">
            <TabItem Header="Orden de compra">
                <views:OrderPurchaseView DataContext="{Binding OrderViewModel}" />
            </TabItem>
            <TabItem Header="Boleta honorarios">
                <views:HonorariumView DataContext="{Binding HonorariumViewModel}" />
            </TabItem>
            <TabItem Header="Conversión">
                <views:CurrencyConverterView DataContext="{Binding CurrencyViewModel}" />
            </TabItem>
        </TabControl>

        <TextBlock Text="Desarrollado por Andrés Amaya Garcés"
                   FontSize="12"
                   Foreground="#66000000"
                   HorizontalAlignment="Right"
                   Margin="0 0 16 16"
                   DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>
